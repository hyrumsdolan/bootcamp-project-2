// Import necessary libraries and models
require('dotenv').config();
const axios = require('axios');
const db = require('../models'); // Adjust based on your project structure

const fetchExercisesAndSeed = async () => {
  try {
    // Ensure the workout table exists, creating it if it does not
    await db.Workout.sync(); // You can use { force: true } to drop and recreate the table, but be cautious as this will delete existing data

    const response = await axios.get('https://api.api-ninjas.com/v1/exercises', {
      headers: { 'X-Api-Key': process.env.API_KEY }
    });

    // Assuming response.data is an array of exercises
    if (response.data && response.data.length > 0) {
      // Adapt to your Exercise model structure
      const seedData = response.data.map(({ name, type, muscle, equipment, difficulty, instructions }) => ({
        name,
        type,
        muscle,
        equipment,
        difficulty,
        instructions
      }));

      // Use the correct model from your db object to bulk create Workout records
      await db.Workout.bulkCreate(seedData);
      console.log('Exercises seeded successfully!');
    } else {
      console.log('No exercises found to seed.');
    }
  } catch (error) {
    console.error('Error fetching exercises from API:', error);
  }
};

fetchExercisesAndSeed();
